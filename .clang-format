# .clang-format
BasedOnStyle: Google

# Indentation
IndentWidth: 4

# Includes
SortIncludes: CaseSensitive

# Line Breaking
ColumnLimit: 100
AlwaysBreakBeforeMultilineStrings: true

# Pointer and Reference Alignment
PointerAlignment: Left
ReferenceAlignment: Left

# Single line placement
AllowShortFunctionsOnASingleLine: Empty
